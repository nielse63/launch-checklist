#!/bin/bash

find $(pwd)/src -type f -exec chmod 664 {} \;
find $(pwd)/src -type d -exec chmod 775 {} \;

find $(pwd)/tasks -type f -exec chmod 664 {} \;
find $(pwd)/tasks -type d -exec chmod 775 {} \;


if [ -d "$(pwd)/test/sample" ]; then
	rm -rf "$(pwd)/test/sample"
fi
find $(pwd)/test -type f -exec chmod 664 {} \;
find $(pwd)/test -type d -exec chmod 775 {} \;

# set executable file permissions
find $(pwd)/src/bin -type f -exec chmod 664 {} \;
find $(pwd)/bin -type f -exec chmod 664 {} \;
