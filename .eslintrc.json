{
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"rules": {
		"curly": 2,
		"no-eq-null": 2,
		"eqeqeq": 2,
		"no-undef": 2,
		"no-unused-vars": 2,
		"max-depth": [ 2, 2 ],
		"no-shadow": [2, {
			"builtinGlobals": true,
			"hoist": "all"
		}],
		"key-spacing": [1, {
			"beforeColon": true,
			"align": "colon"
		}],
		"no-extra-parens": 0,
		"spaced-comment": 0,
		"semi-spacing": [2, {
			"before": false,
			"after": true
		}],
		"indent": [2, "tab", {
			"SwitchCase": 1
		}],
		"no-var": "error"
	}
}
